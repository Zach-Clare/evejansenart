{% extends "_include/_page.twig" %}

{% block title %}
Eve Jansen
{% endblock %}

{% block scripts %}
<script src="js/filter_collection.js"></script>
{% endblock scripts %}

{% set years = craft.entries.limit(null)|group('year|datetime("Y")') %}


{% block content %}
<section class="hero d-flex flex-column justify-content-evenly text-center align-items-center pt-5">
    <h1 id="hero__title" class="hero__title">{{ entry.siteTitle | nl2br }}</h1>
    <a class="button button--active" href=" {{ url(entry.buttonLink)}} ">{{ entry.buttonText}}</a>
</section>
<section class="filter container-fluid d-flex justify-content-center mt-5 mb-3 px-5">
    <div class="filter__box d-flex align-items-center">
        <i class="fa-solid fa-magnifying-glass col-1"></i>
        <input id="filter__title-field" class="filter__title-field col-7" type="text" placeholder="Know the title?">
        <i class="fa-regular fa-calendar col-1"></i>
        <select id="filter__year-field" class="filter__year-field col-3" text="All" value="">
            <option value="">All</option>
        </select>
    </div>
</section>
<section class="container-fluid collection">
    {% for entry in craft.entries.section('piece').orderBy('priority asc').limit(none) %}
        {% set imageUrl = entry.photo.one().geturl() %}
        <div class="collection__piece p-3" data-name="{{ entry.title | replace({' ':''}) | lower }}" data-year="{{ entry.year | datetime("Y") }}">
            <a class="py-2" href="{{ entry.url }}">
                <img class="collection__image" src="{{ imageUrl }}">
            </a>
        </div>
    {% endfor %}
</section>
{% endblock %}